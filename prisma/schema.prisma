generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Nomination {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId // âœ… Corrected

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Nominee Information
  companyName      String
  website          String?
  contactPerson    String
  email            String   @unique
  phone            String
  country          String

  // Award Category
  awardCategory    String

  // Nomination Details
  description      String
  innovation       String
  evidence         String
  links            String?
  socialMedia      String?

  // Nominator Information
  nominatorName    String
  nominatorOrg     String?
  nominatorEmail   String
  nominatorPhone   String

  // Status
  status           String  @default("SUBMITTED")
}
